<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="create_table_users" author="13tom13">
        <createTable tableName="users" schemaName="main">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false" />
            </column>
        </createTable>

        <!-- Добавляем автоинкремент для столбца id -->
        <sql>
            ALTER TABLE main.users ALTER COLUMN id SET DEFAULT nextval('main.users_id_seq');
        </sql>
    </changeSet>

    <changeSet id="create_table_trainings" author="13tom13" runOnChange="true">
        <createTable tableName="trainings" schemaName="main">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="calories_burned" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="trainings" schemaName="main" columnNames="name,date"/>

        <sql>
            ALTER TABLE main.trainings ALTER COLUMN id SET DEFAULT nextval('main.trainings_id_seq');
        </sql>
    </changeSet>

    <!-- Создание таблицы для дополнительной информации о тренировках -->
    <changeSet id="create_table_training_additions" author="13tom13" runOnChange="true">
        <createTable tableName="training_additions" schemaName="main">
            <column name="training_id" type="INT">
                <constraints nullable="false" primaryKey="true"
                             foreignKeyName="fk_training_id" referencedTableSchemaName="main"
                             referencedTableName="trainings" referencedColumnNames="id" deleteCascade="true"/>
            </column>
            <column name="key" type="VARCHAR(100)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
