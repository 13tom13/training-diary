<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

    <changeSet id="create_table_users_roles" author="13tom13" runOnChange="true">
        <createTable tableName="users_roles" schemaName="relations">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_id" referencedTableSchemaName="main"
                             deleteCascade="true" referencedTableName="users" referencedColumnNames="id"
                             primaryKey="true"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_role_id" referencedTableSchemaName="permissions"
                             deleteCascade="true" referencedTableName="roles" referencedColumnNames="id"
                             primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="create_table_user_rights" author="13tom13" runOnChange="true">
        <createTable tableName="user_rights" schemaName="relations">
            <column name="user_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_user_rights" referencedTableSchemaName="main"
                             deleteCascade="true" referencedTableName="users" referencedColumnNames="id"
                             primaryKey="true"/>
            </column>
            <column name="right_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_right_id" referencedTableSchemaName="permissions"
                deleteCascade="true" referencedTableName="rights" referencedColumnNames="id"
                primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_user_trainings_table" author="13tom13">
        <createTable tableName="user_trainings" schemaName="relations">
            <column name="user_id" type="BIGINT">
                <constraints foreignKeyName="fk_user_id_" referencedTableSchemaName="main" nullable="false"
                             referencedTableName="users" referencedColumnNames="id" deleteCascade="true"
                primaryKey="true"/>
            </column>
            <column name="training_id" type="BIGINT">
                <constraints foreignKeyName="fk_training_id" referencedTableSchemaName="main" nullable="false"
                             referencedTableName="trainings" referencedColumnNames="id" deleteCascade="true"
                primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Создание таблицы user_training_types в схеме permissions -->
    <changeSet id="create_table_user_training_types" author="13tom13" runOnChange="true">
        <createTable tableName="user_training_types" schemaName="relations">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" referencedTableSchemaName="main" deleteCascade="true"
                             referencedTableName="users" referencedColumnNames="id" foreignKeyName="fk_user_training_types"/>
            </column>
            <column name="training_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <sql>
            ALTER TABLE relations.user_training_types ALTER COLUMN id SET DEFAULT nextval('relations.seq_user_training_types');
        </sql>
    </changeSet>


</databaseChangeLog>
