<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <!-- Создание схемы main -->
    <changeSet id="create_schema_main" author="13tom13">
        <sql>CREATE SCHEMA IF NOT EXISTS main </sql>
        <sql>CREATE SCHEMA IF NOT EXISTS permissions;</sql>
        <sql>CREATE SCHEMA IF NOT EXISTS service;</sql>
        <sql>CREATE SCHEMA IF NOT EXISTS relations;</sql>
    </changeSet>

    <!-- Создание последовательности -->
    <changeSet id="create_sequence_users_id" author="13tom13">
        <createSequence sequenceName="users_id_seq" schemaName="main" startValue="1"
                        incrementBy="1"/>

        <createSequence sequenceName="trainings_id_seq" schemaName="main" startValue="1"
                        incrementBy="1"/>

        <createSequence sequenceName="seq_roles" schemaName="permissions" startValue="1"
                        incrementBy="1"/>

        <createSequence sequenceName="seq_rights" schemaName="permissions" startValue="1"
                        incrementBy="1"/>

        <createSequence sequenceName="seq_user_training_types" schemaName="relations" startValue="1"
                        incrementBy="1"/>
    </changeSet>


</databaseChangeLog>
