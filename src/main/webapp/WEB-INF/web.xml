<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Training diary web application</display-name>

  <!-- Конфигурация сервлетов -->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>servlet.authorization.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>registration</servlet-name>
    <servlet-class>servlet.authorization.RegistrationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>allTrainings</servlet-name>
    <servlet-class>servlet.training.GetAllTrainings</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getTrainingByUserEmailAndDate</servlet-name>
    <servlet-class>servlet.training.GetTrainingByUserEmailAndDate</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getTrainingByUserEmailAndDateAndName</servlet-name>
    <servlet-class>servlet.training.GetTrainingByUserEmailAndDateAndName</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>saveTraining</servlet-name>
    <servlet-class>servlet.training.SaveTrainingServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>deleteTraining</servlet-name>
    <servlet-class>servlet.training.DeleteTrainingServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getTrainingTypes</servlet-name>
    <servlet-class>servlet.training.GetTrainingTypesServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>saveTrainingTypeServlet</servlet-name>
    <servlet-class>servlet.training.SaveTrainingType</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>addTrainingAdditional</servlet-name>
    <servlet-class>servlet.training.AddTrainingAdditionalServlet</servlet-class>
  </servlet>

  <!-- Отображение сервлетов на URL -->
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>allTrainings</servlet-name>
    <url-pattern>/training/alltrainings</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getTrainingByUserEmailAndDate</servlet-name>
    <url-pattern>/training/gettrainingbyuseremailanddate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getTrainingByUserEmailAndDateAndName</servlet-name>
    <url-pattern>/training/getraining</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>saveTraining</servlet-name>
    <url-pattern>/training/savetraining</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>deleteTraining</servlet-name>
    <url-pattern>/training/deletetraining</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getTrainingTypes</servlet-name>
    <url-pattern>/training/gettrainingtypes</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>saveTrainingTypeServlet</servlet-name>
    <url-pattern>/training/savetrainingtypes</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>addTrainingAdditional</servlet-name>
    <url-pattern>/training/addtrainingadditional</url-pattern>
  </servlet-mapping>
</web-app>
