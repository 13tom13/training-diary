<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Training diary web application</display-name>

  <!-- Конфигурация сервлетов -->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>servlet.authorization.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>registration</servlet-name>
    <servlet-class>servlet.authorization.RegistrationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>allTrainings</servlet-name>
    <servlet-class>servlet.training.ViewTrainingServlet</servlet-class>
  </servlet>

  <!-- Отображение сервлетов на URL -->
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>allTrainings</servlet-name>
    <url-pattern>/training/alltrainings</url-pattern>
  </servlet-mapping>
</web-app>
